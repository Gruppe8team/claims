<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" maxHeight="800.0" maxWidth="1000.0" minHeight="300.0" minWidth="300.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="claims.LoginController">
   <children>
      <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label alignment="CENTER_RIGHT" ellipsisString="" text="Welcome to AutoClaim" textAlignment="CENTER" textOverrun="CLIP" wrapText="true">
               <font>
                  <Font name="Al Nile Bold" size="24.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <Label text="Login">
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextField fx:id="TextField_Email" alignment="CENTER" maxWidth="200.0" promptText="Email">
               <VBox.margin>
                  <Insets bottom="5.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="TextField_Password" alignment="CENTER" maxWidth="200.0" promptText="Password">
               <VBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <Button fx:id="Button_SignIn" mnemonicParsing="false" onAction="#Button_SignInClicked" text="Sign in">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Button>
            <Label text=" Not a member yet?">
               <font>
                  <Font name="Al Nile" size="13.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" top="10.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="Button_SignUp" mnemonicParsing="false" onAction="#Button_SignUpClicked" text="Sign Up" />
         </children>
      </VBox>
   </children>
</AnchorPane>
